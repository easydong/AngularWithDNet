<!DOCTYPE html>
<html ng-app="studentsManagement">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{{title}}</title>
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/alertify")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/CustomizedGlyphs.css" rel="stylesheet" />
</head>
<body>
    <div id="pageWrapper" class="container-fluid">
        <div id="header">
            <div id="banner" class="row">
                <div class="col-lg-12 text-center">
                    <h4><strong>AngularJs</strong> ~practices</h4>
                </div>
            </div>
            <div id="navBar" class="row">
                <div class="navbar navbar-default">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li class="active" role="presentation" id="stsNav"><a href="/">Students</a></li>
                                <li role="presentation" id="stCreate"><a href="/Create">Create Student</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="main" class="row">
            @RenderBody()
        </div>
        <div id="footer" class="row">
            <div class="col-lg-12 text-center">
                <span>Pen by <a href="mailto:sudheer.reddy925@gmail.com">Sudheer</a></span>
                <span>Styled with <a href="http://getbootstrap.com/">Bootstrap</a></span>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/alertify")
    <script src="~/Scripts/app/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
